# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development)
DATABASE_URL=sqlite:///db.sqlite3

# Email (Console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

# Security
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
X_FRAME_OPTIONS=DENY

# Contact Form Rate Limiting
CONTACT_RATE_LIMIT=5
CONTACT_RATE_LIMIT_WINDOW=300

# Optional: Analytics (set to empty for no analytics)
ANALYTICS_SNIPPET=

# Site Settings (personalize these)
SITE_OWNER_NAME=Your Name
SITE_TAGLINE=Software Engineer & Builder
SITE_CONTACT_EMAIL=your.email@example.com 